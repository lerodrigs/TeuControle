<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:minWidth="25px"
              android:minHeight="25px">
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1">
        <RelativeLayout
            android:minHeight="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2"
            android:padding="20dp"
            android:background="@drawable/shape_row"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:text="@string/nome_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:id="@+id/nome_row"
                android:paddingRight="5dp" />
            <FrameLayout
                android:gravity="right"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="status_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/nome_row"
                    android:textColor="@color/theme_green_accent"
                    android:id="@+id/status_row"
                    android:layout_gravity="right"
                    android:visibility="gone" />
            </FrameLayout>
            <TextView
                android:text="@string/vencimento_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nome_row"
                android:id="@+id/data_dow"
                android:textColor="@color/primaryText"
                android:layout_marginTop="5dp" />
            <TextView
                android:text="|"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/data_dow"
                android:id="@+id/separador"
                android:textColor="@color/primaryText"
                android:layout_below="@id/nome_row"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp" />
            <TextView
                android:text="@string/valor_row"
                android:layout_width="wrap_content"
                android:textColor="@color/primaryText"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/separador"
                android:id="@+id/valor_row"
                android:layout_below="@id/nome_row"
                android:layout_marginTop="5dp" />
            <TextView
                android:text="|"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/valor_row"
                android:id="@+id/separador_cat"
                android:textColor="@color/primaryText"
                android:layout_below="@id/nome_row"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp" />
            <TextView
                android:text="@string/categoria_row"
                android:layout_width="wrap_content"
                android:textColor="@color/primaryText"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/separador_cat"
                android:id="@+id/categoria_row"
                android:layout_below="@id/nome_row"
                android:layout_marginTop="5dp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>