<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"
    android:minWidth="25px"
    android:minHeight="25px">
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_nome"
        android:background="@drawable/textline">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout1"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:text="@string/nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_nome"
                android:textColor="@color/primaryText"
                android:layout_marginLeft="10dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_nome"
                android:id="@+id/txt_nome"
                android:textColor="@color/primaryText"
                android:background="@color/branco"
                android:textColorHint="@color/secondaryText"
                android:hint="@string/nome"
                android:minHeight="45dp"
                android:paddingLeft="10dp" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_email"
        android:background="@drawable/textline">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout1"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:text="@string/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_email"
                android:textColor="@color/primaryText"
                android:layout_marginLeft="10dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_email"
                android:id="@+id/txt_email"
                android:textColor="@color/primaryText"
                android:background="@color/branco"
                android:textColorHint="@color/secondaryText"
                android:hint="@string/email"
                android:minHeight="45dp"
                android:paddingLeft="10dp" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_estado"
        android:background="@drawable/textline">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:id="@+id/relativeLayout1"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:text="@string/estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_estado"
                android:textColor="@color/primaryText"
                android:layout_marginLeft="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_estado"
                android:id="@+id/txt_estado_selecione"
                android:textColor="@color/secondaryText"
                android:text="@string/selecione"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_cidade"
        android:background="@drawable/textline">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:id="@+id/relativeLayout1"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:text="@string/cidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_cidade"
                android:textColor="@color/primaryText"
                android:layout_marginLeft="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lbl_cidade"
                android:id="@+id/txt_cidade_selecione"
                android:textColor="@color/secondaryText"
                android:text="@string/selecione"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textline">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:id="@+id/relativeLayout2"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:text="@string/sexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl_sexo"
                android:textColor="@color/primaryText"
                android:layout_marginLeft="10dp" />
            <RadioGroup
                android:id="@+id/radioSexo"
                android:layout_below="@id/lbl_sexo"
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/masculino"
                    android:textColor="@color/secondaryText"
                    android:text="@string/masculino"
                    android:layout_marginLeft="3dp" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feminino"
                    android:textColor="@color/secondaryText"
                    android:id="@+id/feminino"
                    android:layout_marginLeft="10dp" />
            </RadioGroup>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>